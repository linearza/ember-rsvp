<div class="rsvp-container">
  <h1>Hey, {{currentUser.firstName}}!</h1>

  <p>You have been invited to the following {{if (gt currentUser.invitedEvents.length 1) 'events' 'event'}}:</p>

  <div class="events">
    {{#each currentUser.invitedEvents as |event|}}
      <div class="event-listing">
        <h3>{{event.displayName}}</h3>
        {{#link-to 'events.event' event.id class="btn s-s"}}RSVP{{/link-to}}
      </div>
    {{/each}}
  </div>

</div>