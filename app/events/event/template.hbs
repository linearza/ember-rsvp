          <p>{{event.date}}</p>
        </div>

        <div class="event-field">
          <h3>Time</h3>
          <p>{{event.time}}</p>
          {{#if event.timeNotes}}
            <p class="note">{{event.timeNotes}}</p>
          {{/if}}
        </div>


        {{#if event.cateringNote}}
          <div class="event-field">
            <i>{{event.cateringNote}}</i>
          </div>
        {{/if}}

        <div class="event-field">
          <h3>Dress code</h3>
          <p>{{event.dressCode}}</p>
        </div>

        <div class="event-field">
          {{#if userEventNotes}}
            <p class="note mb16">When you are done you can just save everything at the same time below.</p>
            {{#each userEventNotes as |eventNote|}}
              {{textarea value=eventNote.note placeholder="Dietary requirements? Other info you want to let us know about? Feel free to leave that here."}}
              <button class="btn s-s -i {{if removingNote 'disabled'}}" {{action 'removeNote' eventNote}}>Remove note</button>
            {{/each}}
          {{else}}
            <p class="note mb16">{{event.userNotesNote}}</p>
            <button class="btn s-s -i {{if addingNote 'disabled'}}" {{action 'newNote'}}>Add note</button>
          {{/if}}
        </div>


        <div class="buttons mt48">
          <button class="btn {{if rsvp.saving 'disabled'}}" {{action 'saveCurrentUser' target=rsvp}}>{{#if rsvp.saving}}Saving{{else}}Save{{/if}}</button>
        </div>

      </div>

    </div>


